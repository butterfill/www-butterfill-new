---
// src/pages/teaching/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all teaching entries
const allTeaching = (await getCollection('teaching'))
  .filter(item => item.data.year) // Only include entries with year (main teaching entries, not lectures)
  .sort(
  (a, b) => {
    // Convert year strings to numbers for comparison
    const aYear = parseInt(a.data.year.split('-')[0]);
    const bYear = parseInt(b.data.year.split('-')[0]);
    return bYear - aYear;
  }
);
---

<BaseLayout title="Stephen A. Butterfill | Teaching">
  <div class="container mx-auto max-w-6xl px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Main Content -->
      <main class="lg:col-span-4 space-y-8">
        <!-- Teaching Section -->
        <section id="teaching" class="space-y-6">
          <h2 class="text-2xl font-semibold tracking-tight text-slate-800 dark:text-slate-200 border-b border-slate-200 dark:border-slate-800 pb-2">
            Teaching
          </h2>
          <div class="grid gap-4">
            {allTeaching.map(item => (
              <article class="group border border-slate-200 dark:border-slate-800 rounded-lg p-4 hover:bg-slate-100/50 dark:hover:bg-slate-800/50 transition-colors">
                <div class="flex justify-between items-start">
                  <a href={`/teaching/${item.slug}/`} class="block space-y-2 flex-grow">
                    <h3 class="font-medium text-slate-800 dark:text-slate-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                      {item.data.title}
                    </h3>
                    {item.data.authors && (
                      <div class="text-sm text-slate-600 dark:text-slate-400">
                        {item.data.authors}
                      </div>
                    )}
                    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400">
                      {item.data.year && (
                        <span>{item.data.year}</span>
                      )}
                      {item.data.year && item.data.term && (
                        <span>â€¢</span>
                      )}
                      {item.data.term && (
                        <span>{item.data.term}</span>
                      )}
                      {item.data.place && (
                        <>
                          <span>â€¢</span>
                          <span>{item.data.place}</span>
                        </>
                      )}
                    </div>
                  </a>
                  <div class="flex gap-1 ml-4 flex-shrink-0">
                    {item.data.url && (
                      <a 
                        href={item.data.url} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="flex items-center justify-center w-auto h-8 rounded-full bg-slate-100 hover:bg-blue-100 dark:bg-slate-700 dark:hover:bg-blue-900/50 transition-colors px-2"
                        title="Visit Course"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 mr-1" viewBox="0 0 20 20" fill="currentColor">
                          <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                          <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                        </svg>
                        <span class="text-xs font-medium text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400">
                          Visit
                        </span>
                      </a>
                    )}
                  </div>
                </div>
              </article>
            ))}
          </div>
        </section>
      </main>
    </div>
  </div>
</BaseLayout>