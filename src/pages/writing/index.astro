---
// src/pages/writing/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import CiteButton from '../../components/CiteButton.svelte';
import { getCollection } from 'astro:content';

// Get all publications
const allWriting = (await getCollection('writing')).sort(
  (a, b) => {
    const aDate = new Date(a.data.year, 0, 1).valueOf();
    const bDate = new Date(b.data.year, 0, 1).valueOf();
    return bDate - aDate;
  }
);
---

<BaseLayout title="Stephen A. Butterfill | Writing">
  <div class="container mx-auto max-w-6xl px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Main Content -->
      <main class="lg:col-span-4 space-y-8">
        <!-- Writing Section -->
        <section id="writing" class="space-y-6">
          <h2 class="text-2xl font-semibold tracking-tight text-slate-800 dark:text-slate-200 border-b border-slate-200 dark:border-slate-800 pb-2">
            Writing
          </h2>
          <div class="grid gap-4">
            {allWriting.map(item => (
              <article class="group rounded-lg p-4 hover:bg-slate-100/50 dark:hover:bg-slate-800/50 transition-colors">
                <div class="flex justify-between items-start">
                  <a href={`/writing/${item.slug}/`} class="block space-y-2 flex-grow">
                    <h3 class="font-medium text-slate-800 dark:text-slate-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                      {item.data.title}
                    </h3>
                    <div class="text-sm text-slate-600 dark:text-slate-400">
                      {item.data.authors}
                    </div>
                    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400">
                      <span>{item.data.year}</span>
                      {item.data.journal && (
                        <>
                          <span>•</span>
                          <span>{item.data.journal}</span>
                        </>
                      )}
                      {item.data.booktitle && (
                        <>
                          <span>•</span>
                          <span>{item.data.booktitle}</span>
                        </>
                      )}
                    </div>
                  </a>
                  <div class="flex gap-1 ml-4 flex-shrink-0">
                    {item.data.bibtex && (
                      <CiteButton bibtex={item.data.bibtex} client:load />
                    )}
                    <a 
                      href={`/writing/${item.slug}/`}
                      class="flex items-center justify-center w-auto h-8 rounded-full bg-slate-100 hover:bg-blue-100 dark:bg-slate-700 dark:hover:bg-blue-900/50 transition-colors px-2"
                      title="View HTML"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 mr-1" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-xs font-medium text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400">
                        HTML
                      </span>
                    </a>
                    {item.data.pdfUrl && (
                      <a 
                        href={item.data.pdfUrl} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="flex items-center justify-center w-auto h-8 rounded-full bg-slate-100 hover:bg-blue-100 dark:bg-slate-700 dark:hover:bg-blue-900/50 transition-colors px-2"
                        title="View PDF"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 mr-1" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-xs font-medium text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400">
                          PDF
                        </span>
                      </a>
                    )}
                  </div>
                </div>
              </article>
            ))}
          </div>
        </section>
      </main>
    </div>
  </div>
</BaseLayout>