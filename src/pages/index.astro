---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Sidebar from '../components/Sidebar.astro';
import CiteButton from '../components/CiteButton.svelte';
import { getCollection } from 'astro:content';

// // Get all publications
// const allWriting = (await getCollection('writing')).sort(
//   (a, b) => {
//     const aDate = new Date(a.data.year, 0, 1).valueOf();
//     const bDate = new Date(b.data.year, 0, 1).valueOf();
//     return bDate - aDate;
//   }
// );
// Get featured publications
const featuredWriting = (await getCollection('writing')).filter(
  item => item.data.featured
).sort(
  (a, b) => {
    const aDate = new Date(a.data.year, 0, 1).valueOf();
    const bDate = new Date(b.data.year, 0, 1).valueOf();
    return bDate - aDate;
  }
);


// Get featured talks
const featuredTalks = (await getCollection('talks')).filter(
  item => item.data.featured
).sort(
  (a, b) => {
    const aDate = new Date(a.data.pubDate).valueOf();
    const bDate = new Date(b.data.pubDate).valueOf();
    return bDate - aDate;
  }
);

// Get featured teaching
const featuredTeaching = (await getCollection('teaching')).filter(
  item => item.data.featured
).sort(
  (a, b) => {
    // Convert year strings to numbers for comparison
    const aYear = parseInt(a.data.year.split('-')[0]);
    const bYear = parseInt(b.data.year.split('-')[0]);
    return bYear - aYear;
  }
);
---
<BaseLayout title="Stephen A. Butterfill | Home">
  <div class="container mx-auto max-w-6xl px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Sidebar -->
      <aside class="lg:col-span-1">
        <Sidebar />
      </aside>
      
      <!-- Main Content -->
      <main class="lg:col-span-3 space-y-8">
        <!-- Hero Section -->
        <section id="mini-about" class="text-center space-y-4">
          <h1 class="text-4xl font-bold tracking-tight text-slate-800 dark:text-slate-200">Stephen A. Butterfill</h1>
          <p class="text-lg text-slate-500 dark:text-slate-400 max-w-2xl mx-auto">
            Philosopher specializing in joint action, mindreading, and cognitive development
          </p>
        </section>

        <!-- Writing Section -->
        <section id="writing" class="space-y-6">
          <h2 class="text-2xl font-semibold tracking-tight text-slate-800 dark:text-slate-200 border-b border-slate-200 dark:border-slate-800 pb-2">
            Recent Writing
            <a href="/writing/" class="text-sm font-normal text-slate-500 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">... all writing</a>
          </h2>
          <div class="grid gap-4">
            {featuredWriting.map(item => (
              <article class="group rounded-lg p-4 hover:bg-slate-100/50 dark:hover:bg-slate-800/50 transition-colors">
                <div class="flex justify-between items-start">
                  <a href={`/writing/${item.slug}/`} class="block space-y-2 flex-grow">
                    <h3 class="font-medium text-slate-800 dark:text-slate-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                      {item.data.title}
                    </h3>
                    <div class="text-sm text-slate-600 dark:text-slate-400">
                      {item.data.authors}
                    </div>
                    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400">
                      <span>{item.data.year}</span>
                      {item.data.journal && (
                        <>
                          <span>•</span>
                          <span>{item.data.journal}</span>
                        </>
                      )}
                    </div>
                  </a>
                  <div class="flex gap-1 ml-4 flex-shrink-0">
                    {item.data.bibtex && (
                      <CiteButton bibtex={item.data.bibtex} client:load />
                    )}
                    <a 
                      href={`/writing/${item.slug}/`}
                      class="flex items-center justify-center w-auto h-8 rounded-full bg-slate-100 hover:bg-blue-100 dark:bg-slate-700 dark:hover:bg-blue-900/50 transition-colors px-2"
                      title="View HTML"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 mr-1" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-xs font-medium text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400">
                        HTML
                      </span>
                    </a>
                    {item.data.pdfUrl && (
                      <a 
                        href={item.data.pdfUrl} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="flex items-center justify-center w-auto h-8 rounded-full bg-slate-100 hover:bg-blue-100 dark:bg-slate-700 dark:hover:bg-blue-900/50 transition-colors px-2"
                        title="View PDF"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 mr-1" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-xs font-medium text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400">
                          PDF
                        </span>
                      </a>
                    )}
                  </div>
                </div>
              </article>
            ))}
            <article class="border border-dashed border-slate-300 dark:border-slate-700 rounded-lg p-4 text-center">
              <a href="/writing/" class="text-slate-500 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                all writing →
              </a>
            </article>
          </div>
        </section>

        <!-- Talks Section -->
        <section id="talks" class="space-y-6">
          <h2 class="text-2xl font-semibold tracking-tight text-slate-800 dark:text-slate-200 border-b border-slate-200 dark:border-slate-800 pb-2">
            Featured Talks
            <a href="/talks/" class="text-sm font-normal text-slate-500 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors ml-2">... all talks</a>
          </h2>
          <div class="grid gap-4">
            {featuredTalks.map(item => (
              <article class="group rounded-lg p-4 hover:bg-slate-100/50 dark:hover:bg-slate-800/50 transition-colors">
                <div class="flex justify-between items-start">
                  <a href={`/talks/${item.slug}/`} class="block space-y-2 flex-grow">
                    <h3 class="font-medium text-slate-800 dark:text-slate-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                      {item.data.title}
                    </h3>
                    <div class="text-sm text-slate-600 dark:text-slate-400">
                      {item.data.authors}
                    </div>
                    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400">
                      <span>{new Date(item.data.pubDate).getFullYear()}</span>
                      {item.data.event && (
                        <>
                          <span>•</span>
                          <span>{item.data.event}</span>
                        </>
                      )}
                      {item.data.address && (
                        <>
                          <span>•</span>
                          <span>{item.data.address}</span>
                        </>
                      )}
                    </div>
                  </a>
                  <div class="flex gap-1 ml-4 flex-shrink-0">
                    {item.data.handoutUrl && (
                      <a 
                        href={item.data.handoutUrl} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="flex items-center justify-center w-auto h-8 rounded-full bg-slate-100 hover:bg-purple-100 dark:bg-slate-700 dark:hover:bg-purple-900/50 transition-colors px-2"
                        title="View Handout"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-600 hover:text-purple-600 dark:text-slate-400 dark:hover:text-purple-400 mr-1" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-xs font-medium text-slate-600 hover:text-purple-600 dark:text-slate-400 dark:hover:text-purple-400">
                          PDF
                        </span>
                      </a>
                    )}
                    {item.data.slidesUrl && (
                      <a 
                        href={item.data.slidesUrl} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="flex items-center justify-center w-auto h-8 rounded-full bg-slate-100 hover:bg-green-100 dark:bg-slate-700 dark:hover:bg-green-900/50 transition-colors px-2"
                        title="View Slides"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-600 hover:text-green-600 dark:text-slate-400 dark:hover:text-green-400 mr-1" viewBox="0 0 20 20" fill="currentColor">
                          <path d="M7 4a2 2 0 012-2h6a2 2 0 012 2v2h4a2 2 0 012 2v6a2 2 0 01-2 2H3a2 2 0 01-2-2V8a2 2 0 012-2h4V4z" />
                        </svg>
                        <span class="text-xs font-medium text-slate-600 hover:text-green-600 dark:text-slate-400 dark:hover:text-green-400">
                          Slides
                        </span>
                      </a>
                    )}
                  </div>
                </div>
              </article>
            ))}
            <article class="border border-dashed border-slate-300 dark:border-slate-700 rounded-lg p-4 text-center">
              <a href="/talks/" class="text-slate-500 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                all talks →
              </a>
            </article>
          </div>
        </section>

        <!-- Teaching Section -->
        <section id="teaching" class="space-y-6">
          <h2 class="text-2xl font-semibold tracking-tight text-slate-800 dark:text-slate-200 border-b border-slate-200 dark:border-slate-800 pb-2">
            Current Teaching
            <a href="/teaching/" class="text-sm font-normal text-slate-500 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors ml-2">... all teaching</a>
          </h2>
          <div class="grid gap-4">
            {featuredTeaching.map(item => (
              <article class="group rounded-lg p-4 hover:bg-slate-100/50 dark:hover:bg-slate-800/50 transition-colors">
                <div class="flex justify-between items-start">
                  <a href={`/teaching/${item.slug}/`} class="block space-y-2 flex-grow">
                    <h3 class="font-medium text-slate-800 dark:text-slate-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                      {item.data.title}
                    </h3>
                    {item.data.authors && (
                      <div class="text-sm text-slate-600 dark:text-slate-400">
                        {item.data.authors}
                      </div>
                    )}
                    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400">
                      {item.data.year && (
                        <span>{item.data.year}</span>
                      )}
                      {item.data.year && item.data.term && (
                        <span>•</span>
                      )}
                      {item.data.term && (
                        <span>{item.data.term}</span>
                      )}
                      {item.data.place && (
                        <>
                          <span>•</span>
                          <span>{item.data.place}</span>
                        </>
                      )}
                    </div>
                  </a>
                  <div class="flex gap-1 ml-4 flex-shrink-0">
                    {item.data.url && (
                      <a 
                        href={item.data.url} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="flex items-center justify-center w-auto h-8 rounded-full bg-slate-100 hover:bg-blue-100 dark:bg-slate-700 dark:hover:bg-blue-900/50 transition-colors px-2"
                        title="Visit Course"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 mr-1" viewBox="0 0 20 20" fill="currentColor">
                          <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                          <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                        </svg>
                        <span class="text-xs font-medium text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400">
                          Visit
                        </span>
                      </a>
                    )}
                  </div>
                </div>
              </article>
            ))}
            <article class="border border-dashed border-slate-300 dark:border-slate-700 rounded-lg p-4 text-center">
              <a href="/teaching/" class="text-slate-500 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                all teaching →
              </a>
            </article>
          </div>
        </section>


        <!-- about section -->
        <section id="about" class="space-y-6">
          <h2 class="text-2xl font-semibold tracking-tight text-slate-800 dark:text-slate-200 border-b border-slate-200 dark:border-slate-800 pb-2">
            About
          </h2>
          <p class="text-sm text-slate-600 dark:text-slate-400">
            I am currently Professor of Philosophy at the 
            <a href='https://warwick.ac.uk/fac/soc/philosophy/' target='_blank' class="text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 transition-colors" >
              University of Warwick
              <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-3 h-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>.
          
          
            (If you are after beds or flooring, it’s
            <a href='https://butterfills.com' target='_blank' class="text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 transition-colors" >
              my brother Matt you want
              <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-3 h-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>.)
          </p>

          <p class="text-sm text-slate-600 dark:text-slate-400">
            I have a DPhil and BPhil in Philosophy and a BA in Mathematics and Philosophy, all from the University of Oxford.
          </p>
          <p class="text-sm text-slate-600 dark:text-slate-400">
            I live in Southampton, UK with my wife 
            <a href="https://southampton.ac.uk/ageing/about/staff/emsb.page" target="_blank" class="text-slate-600 hover:text-blue-600 dark:text-slate-400 dark:hover:text-blue-400 transition-colors" >
              Elisabeth Schroeder-Butterfill
              <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-3 h-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
            and four kids. (I'm not related to a politician; I'm also neither Jeremy Butterfield nor David Buttelmann, excellent though those are.)
          </p>
        </section>

      </main>
    </div>
  </div>
</BaseLayout>